{# @var method phpDocumentor\Descriptor\MethodDescriptor #}
<method
        final="{{ method.final | export }}"
        abstract="{{ method.abstract | export }}"
        static="{{ method.static | export }}"
        namespace="{{ method.namespace }}"
        start_line="{{ method.line }}"
        start_column="{{ method.column }}"
        end_line="{{ method.endLine }}"
        end_column="{{ method.endColumn }}"
        visibility="{{ method.visibility }}"
        returnByReference="{{ method.hasReturnByReference | export }}"
>
    <name>{{ method.name }}</name>
    <full_name>{{ method.fullyQualifiedStructuralElementName }}</full_name>
    <value>{{ method.value }}</value>
    {% if inherited_from %}
        <inherited_from>{{ inherited_from }}</inherited_from>{% endif %}
    {% for argument in method.arguments %}
        {{ include('argument.xml.twig', {descriptor: argument}) }}
    {% endfor %}
    {{ include('docblock.xml.twig', {descriptor: method}) }}
</method>
