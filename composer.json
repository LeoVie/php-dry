{
    "name": "leovie/php-clone-detection",
    "description": "Detect clones in php code.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "leovie/php-clean-code-bundle": "dev-main",
        "leovie/php-construct-normalize": "dev-main",
        "leovie/php-filesystem": "dev-main",
        "leovie/php-grouper": "dev-main",
        "leovie/php-html-builder": "dev-main",
        "leovie/php-method-modifier": "dev-main",
        "leovie/php-method-runner": "dev-main",
        "leovie/php-methods-parser": "dev-main",
        "leovie/php-param-generator": "dev-main",
        "leovie/php-token-normalize": "dev-main",
        "nikic/php-parser": "^4.13",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/finder": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/stopwatch": "5.4.*",
        "symfony/yaml": "5.4.*",
        "thecodingmachine/safe": "^1.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-token-normalize.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-methods-parser.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-filesystem.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-grouper.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-param-generator.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-method-runner.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-clean-code-bundle.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-method-modifier.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-html-builder.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LeoVie/php-construct-normalize.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "psalm": "psalm -c build/config/psalm.xml --show-info=true",
        "phpunit": "phpunit -c build/config/phpunit.xml",
        "infection": "infection --only-covered --configuration=build/config/infection.json --min-msi=92 --min-covered-msi=92 --coverage=../coverage --threads=4 --test-framework-options='--no-coverage'",
        "infection-after-phpunit": "@infection --skip-initial-tests",
        "test": [
            "@psalm",
            "@phpunit"
        ],
        "testall": [
            "@test",
            "@infection-after-phpunit"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    },
    "require-dev": {
        "infection/infection": "^0.25.3",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^3.0",
        "vimeo/psalm": "^4.10"
    }
}
