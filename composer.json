{
    "name": "leovie/php-dry",
    "description": "Detect clones in php code.",
    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "leovie/php-clean-code-bundle": "^1.0",
        "leovie/php-construct-normalize": "^1.0",
        "leovie/php-filesystem": "^1.0",
        "leovie/php-grouper": "^1.0",
        "leovie/php-html-builder": "^1.0",
        "leovie/php-method-modifier": "^1.0",
        "leovie/php-method-runner": "^1.0",
        "leovie/php-methods-parser": "^1.0",
        "leovie/php-param-generator": "^1.0",
        "leovie/php-token-normalize": "^1.0",
        "nikic/php-parser": "^4.13",
        "roave/security-advisories": "dev-latest",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/finder": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/stopwatch": "5.4.*",
        "symfony/yaml": "5.4.*",
        "thecodingmachine/safe": "^1.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "psalm": "psalm -c build/config/psalm.xml --show-info=true",
        "phpunit": "phpunit -c build/config/phpunit.xml",
        "infection": "infection --only-covered --configuration=build/config/infection.json --min-msi=100 --min-covered-msi=100 --coverage=../coverage --threads=4 --test-framework-options='--no-coverage --testsuite=unit'",
        "infection-after-phpunit": "@infection --skip-initial-tests",
        "test": [
            "@psalm",
            "@phpunit"
        ],
        "testall": [
            "@test",
            "@infection-after-phpunit"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    },
    "require-dev": {
        "infection/infection": "^0.26.6",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^3.0",
        "vimeo/psalm": "^4.10"
    }
}
